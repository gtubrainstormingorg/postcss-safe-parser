{
  "name": "postcss-safe-parser",
  "version": "6.0.0",
  "description": "Fault-tolerant CSS parser for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "parser",
    "fault tolerant"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-safe-parser",
  "scripts": {
    "unit": "uvu . '\\.test\\.js$'",
    "test": "pnpm unit && eslint . && ./test/integration.js"
  },
  "engines": {
    "node": ">=12.0"
  },
  "main": "lib/safe-parse",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.3.3"
  },
  "devDependencies": {
    "@logux/eslint-config": "^47.2.0",
    "clean-publish": "^4.0.1",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "postcss": "^8.4.14",
    "postcss-parser-tests": "^8.5.1",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
